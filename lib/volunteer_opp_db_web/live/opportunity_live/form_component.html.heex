<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="opportunity-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :name %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>
  
    <%= label f, :description %>
    <%= textarea f, :description %>
    <%= error_tag f, :description %>
  
    <%= label f, :info_url %>
    <%= text_input f, :info_url %>
    <%= error_tag f, :info_url %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
